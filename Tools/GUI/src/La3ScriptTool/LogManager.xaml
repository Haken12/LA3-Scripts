<Window x:Class="La3ScriptConverter.LogManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:La3ScriptConverter"
        mc:Ignorable="d"
        Title="LogManager" Height="550" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Output" HorizontalAlignment="Center"/>
            <TextBox x:Name="txtLogging" Height="437" VerticalScrollBarVisibility="Auto" IsReadOnly="True" IsReadOnlyCaretVisible="True"></TextBox>
            <Button Content="Clear" Click="Button_Click"/>

        </StackPanel>
    </Grid>
</Window>
